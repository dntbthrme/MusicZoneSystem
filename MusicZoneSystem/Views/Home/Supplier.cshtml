@using MusicZoneSystem.Models

@{
    ViewBag.Title = "Supplier";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<!-- inner banner -->
<section class="inner-banner py-5">
    <div class="w3l-breadcrumb py-lg-5">
        <div class="container pt-4 pb-sm-4">
            <h4 class="inner-text-title pt-5">Supplier</h4>
            <ul class="breadcrumbs-custom-path">
                <li><a href="/Home/Index">Home</a></li>
                <li class="active"><i class="fas fa-angle-right"></i>Supplier</li>
            </ul>
        </div>
    </div>
</section>
<!-- //inner banner -->
<!-- Content block -->
<div class="w3l-grids-block-5 py-5">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">Geltan's Music Zone</p>
            <h3 class="title-style">Suppliers</h3>
        </div>
        <div class="row justify-content-center">
            @model List<supplierDetails>

            <div class="row">
                @foreach (var supplier in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="coursecard-single">
                            <div class="content-main-top">
                                <ul class="list-unstyled d-flex align-items-center justify-content-between">
                                    <li><i class="fas fa-shopping-cart"></i>&nbsp; Supplier ID: &nbsp; @supplier.sup_id </li>
                                </ul>
                                <h4><a>@supplier.sup_company</a></h4>
                                <p>Contact person:&emsp;@supplier.sup_fname &nbsp;@supplier.sup_mi . &nbsp; @supplier.sup_lname </p>
                                <p>Email:&emsp;@supplier.sup_email</p>
                                <p>Contact #:&emsp;@supplier.sup_phone</p>
                                <p>Address:&emsp;@supplier.sup_address</p>
                                <div class="top-content-border d-flex align-items-center justify-content-between mt-4 pt-4">
                                    <a class="btn btn-style-primary" style="margin-left: 200px" href="/Home/SupplierDetails?supId=@supplier.sup_id">
                                        Know Details <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
<!-- Content block -->
